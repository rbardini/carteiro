<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!-- Variation on the light theme with dark action bar -->
  <style name="Theme.Carteiro" parent="Theme.Sherlock.Light.DarkActionBar">
    <!-- Light.DarkActionBar specific -->
    <item name=        "actionBarWidgetTheme">@style/Theme.Carteiro.Widget</item>

    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowBackground">@color/background</item>
    <item name="android:colorBackground">@color/background</item>
    <item name="android:fadeScrollbars">true</item>
    <item name="android:textViewStyle">@style/TextView</item>
    <item name="android:buttonStyle">@style/Button</item>
    <item name="android:checkboxStyle">@style/CheckBox</item>
    <item name="android:listViewStyle">@style/ListView</item>
    <item name="android:listSeparatorTextViewStyle">@style/ListSeparatorTextView</item>
    <item name="android:actionBarStyle">@style/ActionBar</item>
    <item name="android:actionButtonStyle">@style/ActionButton</item>
    <item name="android:popupMenuStyle">@style/PopupMenu</item>
    <item name="android:dropDownListViewStyle">@style/DropDownListView</item>
    <item name="android:selectableItemBackground">@drawable/list_selector</item>
    <item name="android:activatedBackgroundIndicator">@drawable/activated_background</item>
    <item name=        "actionBarItemBackground">@drawable/list_selector</item>
    <item name="android:editTextBackground">@drawable/edit_text</item>
    <item name="android:listChoiceBackgroundIndicator">@drawable/list_selector</item>
  </style>

  <!-- Action Bar -->
  <style name="ActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
    <item name="android:background">@color/primary</item>
    <item name=        "backgroundStacked">@color/primary</item>
    <item name=        "backgroundSplit">@color/primary</item>
  </style>

  <!-- This style is only referenced in a Light.DarkActionBar based theme -->
  <style name="Theme.Carteiro.Widget" parent="@style/Theme.Sherlock">
    <item name="android:popupMenuStyle">@style/PopupMenu</item>
    <item name="android:dropDownListViewStyle">@style/DropDownListView</item>
  </style>

  <!-- Widget -->
  <style name="CheckBox" parent="android:Widget.CompoundButton.CheckBox">
    <item name="android:textColor">@color/primary</item>
    <item name="android:button">@drawable/btn_check</item>
  </style>
</resources>
