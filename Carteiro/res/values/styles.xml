<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!-- Action Bar -->
  <style name="ActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
    <item name=        "background">@color/primary</item>
    <item name=        "backgroundStacked">@color/primary</item>
    <item name=        "backgroundSplit">@color/primary</item>
  </style>

  <!-- This style is only referenced in a Light.DarkActionBar based theme -->
  <style name="Theme.Carteiro.Widget" parent="@style/Theme.Sherlock">
    <item name=        "popupMenuStyle">@style/PopupMenu</item>
    <item name=        "dropDownListViewStyle">@style/DropDownListView</item>
  </style>

  <!-- Global -->
  <style name="Wrap">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>
  <style name="Fill">
     <item name="android:layout_width">fill_parent</item>
     <item name="android:layout_height">fill_parent</item>
  </style>
  <style name="Stretch">
     <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <!-- Layout -->
  <style name="Container" parent="@style/Fill">
    <item name="android:orientation">vertical</item>
  </style>
  <style name="Container.Inner">
     <item name="android:padding">15dp</item>
  </style>
  <style name="Container.Inner.Center">
     <item name="android:gravity">center</item>
  </style>

  <!-- Widget -->
  <style name="TextView" parent="android:Widget.TextView">
     <item name="android:textColor">@color/primary</item>
  </style>
  <style name="Button" parent="android:Widget.Button">
     <item name="android:background">@drawable/btn_default</item>
     <item name="android:textColor">@android:color/white</item>
     <item name="android:minHeight">48dip</item>
    <item name="android:minWidth">64dip</item>
  </style>
  <style name="ActionButton" parent="Widget.Sherlock.ActionButton">
    <item name="android:background">@drawable/list_selector</item>
  </style>
  <style name="CheckBox" parent="android:Widget.CompoundButton.CheckBox">
    <item name="android:textColor">@color/primary</item>
  </style>
  <style name="PopupMenu" parent="Widget.Sherlock.ListPopupWindow">
    <item name="android:popupBackground">@drawable/menu_dropdown_panel</item>
  </style>
  <style name="DropDownListView" parent="Widget.Sherlock.ListView.DropDown">
    <item name="android:listSelector">@drawable/list_selector</item>
  </style>

  <!-- Custom Widgets -->
  <style name="AddButton" parent="@style/Wrap">
     <item name="android:src">@android:drawable/ic_input_add</item>
  </style>
  <style name="TrkCodeField" parent="@style/Stretch">
    <item name="android:hint">@string/hint_tracking_code</item>
    <item name="android:textSize">@dimen/text_size_medium</item>
    <item name="android:singleLine">true</item>
    <item name="android:maxLength">13</item>
    <item name="android:inputType">textCapCharacters|textNoSuggestions</item>
    <item name="android:selectAllOnFocus">true</item>
  </style>
  <style name="ItemDescField" parent="@style/Stretch">
    <item name="android:hint">@string/hint_item_description</item>
    <item name="android:textSize">@dimen/text_size_medium</item>
    <item name="android:singleLine">true</item>
    <item name="android:inputType">textCapSentences</item>
    <item name="android:selectAllOnFocus">true</item>
  </style>
  <style name="Star">
    <item name="android:layout_width">27dp</item>
    <item name="android:layout_height">27dp</item>
    <item name="android:button">@drawable/btn_star</item>
  </style>
  <style name="Star.Add">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_alignParentLeft">true</item>
    <item name="android:layout_alignBaseline">@+id/add_item_btn</item>
    <item name="android:text">@string/checkbox_add_favorite</item>
    <item name="android:textSize">@dimen/text_size_medium</item>
  </style>
  <style name="EmptyText" parent="@style/Fill">
    <item name="android:gravity">center</item>
    <item name="android:text">@string/text_empty_list</item>
  </style>

  <!-- List -->
  <style name="ListView" parent="android:Widget.ListView">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">fill_parent</item>
    <item name="android:divider">@color/divider</item>
    <item name="android:dividerHeight">1px</item>
    <item name="android:cacheColorHint">@color/background</item>
    <item name="android:listSelector">@drawable/list_selector</item>
  </style>
  <style name="ListSeparatorTextView" parent="android:Widget.TextView">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">25dp</item>
    <item name="android:layout_marginTop">8dp</item>
    <item name="android:background">@drawable/list_section_divider_light</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">14sp</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:paddingLeft">8dp</item>
    <item name="android:paddingRight">8dp</item>
  </style>
  <style name="ListItem" parent="@style/Stretch">
    <item name="android:orientation">vertical</item>
    <item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
    <item name="android:paddingLeft">10dp</item>
    <item name="android:paddingRight">10dp</item>
    <item name="android:paddingTop">8dip</item>
    <item name="android:paddingBottom">8dp</item>
  </style>
  <style name="ListTitle" parent="@style/Wrap">
    <item name="android:textSize">@dimen/text_size_medium</item>
  </style>
  <style name="ListSubTitle" parent="@style/Wrap">
    <item name="android:textColorHint">@color/primary</item>
    <item name="android:textColor">@color/secondary</item>
  </style>
  <style name="ListInfo" parent="@style/Wrap">
    <item name="android:textSize">@dimen/text_size_micro</item>
    <item name="android:textColor">@color/aside</item>
  </style>

  <!-- Record Activity -->
  <style name="Record.Header" parent="@style/Stretch">
    <item name="android:orientation">vertical</item>
    <item name="android:background">@drawable/header_gradient</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:paddingRight">8dp</item>
    <item name="android:paddingBottom">16dp</item>
    <item name="android:paddingLeft">8dp</item>
  </style>
  <style name="Record.Heading" parent="@style/Wrap">
    <item name="android:textColor">@android:color/white</item>
    <item name="android:shadowColor">@color/primary</item>
    <item name="android:shadowDx">0</item>
    <item name="android:shadowDy">1</item>
    <item name="android:shadowRadius">2</item>
  </style>
  <style name="Record.Heading.Title">
    <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
    <item name="android:layout_marginRight">96dp</item>
  </style>
  <style name="Record.Heading.Subtitle">
    <item name="android:textStyle">italic</item>
  </style>

</resources>
