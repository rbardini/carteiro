<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <FrameLayout style="@style/Record"
    android:id="@+id/header"
    android:background="@color/theme_primary_dark">

    <RelativeLayout style="@style/Record.Header">

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="?android:attr/actionBarSize"
        android:orientation="vertical">

        <TextView style="@style/Record.Heading"
          android:id="@+id/legend" />

        <TextView style="@style/Record.Heading.Title"
          android:id="@+id/title" />

        <TextView style="@style/Record.Heading.Subtitle"
          android:id="@+id/subtitle"
          android:drawablePadding="4dp" />

      </LinearLayout>

    </RelativeLayout>

  </FrameLayout>

  <FrameLayout
    android:id="@+id/record_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" />

</LinearLayout>
