<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="Theme.Carteiro" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/theme_primary</item>
    <item name="colorPrimaryDark">@color/theme_primary_dark</item>
    <item name="colorAccent">@color/theme_accent</item>
    <item name="actionModeBackground">@color/theme_accent_dark</item>
    <item name="windowActionModeOverlay">true</item>

    <item name="android:windowBackground">@color/theme_background</item>
    <item name="android:colorBackground">@color/theme_background</item>
    <item name="android:textColorHighlight">@color/theme_accent_light</item>
    <item name="android:textAppearanceButton">@style/TextAppearanceButton</item>
    <item name="android:editTextStyle">@style/EditTextStyle</item>
    <item name="android:borderlessButtonStyle">@style/BorderlessButtonStyle</item>
    <item name="android:listViewStyle">@style/ListView</item>
  </style>

  <style name="Theme.Carteiro.Translucent" />

  <style name="Theme.Carteiro.AddPopup" parent="@style/Theme.AppCompat.Light.Dialog">
    <item name="colorPrimary">@color/theme_primary</item>
    <item name="colorPrimaryDark">@color/theme_primary_dark</item>
    <item name="colorAccent">@color/theme_accent</item>
    <item name="windowActionBar">false</item>

    <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
    <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    <item name="android:textColorHighlight">@color/theme_accent_light</item>
    <item name="android:textAppearanceButton">@style/TextAppearanceButton</item>
    <item name="android:editTextStyle">@style/EditTextStyle</item>
    <item name="android:borderlessButtonStyle">@style/BorderlessButtonStyle</item>
  </style>

</resources>
