<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <View
    android:id="@+id/timeline"
    android:layout_width="1dp"
    android:layout_height="match_parent"
    android:layout_marginStart="40dp"
    android:background="@drawable/timeline_middle" />

  <RelativeLayout style="@style/ListItem">

    <ImageView
      android:id="@+id/img_postal_status"
      android:layout_width="@dimen/postal_status_icon_size"
      android:layout_height="@dimen/postal_status_icon_size"
      android:layout_alignParentStart="true"
      android:background="@drawable/circle"
      android:padding="@dimen/keyline_1_half"
      android:contentDescription="@string/desc_status" />

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toEndOf="@+id/img_postal_status"
      android:layout_toStartOf="@+id/layout_postal_date_time"
      android:orientation="vertical"
      android:paddingStart="@dimen/keyline_1"
      android:paddingEnd="@dimen/keyline_1_half">

      <TextView style="@style/ListText.Title"
        android:id="@+id/text_postal_status_title" />

      <TextView style="@style/ListText.SubTitle"
        android:id="@+id/text_postal_status_info" />

      <TextView style="@style/ListText.Info"
        android:id="@+id/text_postal_status_loc" />

    </LinearLayout>

    <LinearLayout
      android:id="@+id/layout_postal_date_time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentTop="true"
      android:orientation="vertical"
      android:gravity="top|end">

      <TextView style="@style/ListText.Info"
        android:id="@+id/text_postal_status_date" />

      <TextView style="@style/ListText.Info"
        android:id="@+id/text_postal_status_time" />

    </LinearLayout>

  </RelativeLayout>

</FrameLayout>
