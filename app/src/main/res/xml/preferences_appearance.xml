<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

  <ListPreference android:key="@string/pref_key_initial_category"
    android:title="@string/pref_initial_category_title"
    android:summary="@string/pref_initial_category_summary"
    android:defaultValue="1" />

  <ListPreference android:key="@string/pref_key_theme"
    android:title="@string/pref_theme_title"
    android:summary="@string/pref_theme_summary"
    android:entries="@array/theme_names"
    android:entryValues="@array/theme_values"
    android:defaultValue="@string/theme_light" />

  <SwitchPreference android:key="@string/pref_key_use_adaptive_keyboard"
    android:title="@string/pref_use_adaptive_keyboard_title"
    android:summary="@string/pref_use_adaptive_keyboard_summary"
    android:defaultValue="true" />

</androidx.preference.PreferenceScreen>
