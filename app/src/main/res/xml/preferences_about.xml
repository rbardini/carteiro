<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

  <Preference android:key="@string/pref_key_blog" android:title="@string/pref_blog_title">
    <intent android:action="android.intent.action.VIEW" android:data="@string/blog_url" />
  </Preference>

  <Preference android:key="@string/pref_key_facebook" android:title="@string/pref_facebook_title">
    <intent android:action="android.intent.action.VIEW" android:data="@string/facebook_url" />
  </Preference>

  <Preference android:key="@string/pref_key_twitter" android:title="@string/pref_twitter_title">
    <intent android:action="android.intent.action.VIEW" android:data="@string/twitter_url" />
  </Preference>

  <Preference android:key="@string/pref_key_community" android:title="@string/pref_community_title">
    <intent android:action="android.intent.action.VIEW" android:data="@string/community_url" />
  </Preference>

  <Preference android:key="@string/pref_key_rate" android:title="@string/pref_rate_title" />

  <PreferenceCategory android:title="@string/pref_version_category">

    <Preference android:key="@string/pref_key_version"
      android:title="@string/app_name"
      android:summary="@string/pref_version_summary"
      android:enabled="false" />

    <Preference android:key="@string/pref_key_privacy" android:title="@string/pref_privacy_title">
      <intent android:action="android.intent.action.VIEW" android:data="@string/privacy_url" />
    </Preference>

  </PreferenceCategory>

</androidx.preference.PreferenceScreen>
