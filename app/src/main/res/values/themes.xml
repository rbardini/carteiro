<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="Theme.Carteiro" parent="Theme.AppCompat.DayNight.NoActionBar">
    <item name="colorPrimary">@color/theme_primary</item>
    <item name="colorPrimaryDark">@color/theme_primary_dark</item>
    <item name="colorAccent">@color/theme_accent</item>
    <item name="actionModeBackground">@color/theme_accent_dark</item>
    <item name="windowActionModeOverlay">true</item>
    
    <item name="android:windowAllowEnterTransitionOverlap">true</item>
    <item name="android:windowAllowReturnTransitionOverlap">true</item>
    <item name="android:windowBackground">@color/theme_background</item>
    <item name="android:colorBackground">@color/theme_background</item>
    <item name="android:listViewStyle">@style/ListView</item>
  </style>

  <style name="Theme.Carteiro.Translucent">
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="android:windowDrawsSystemBarBackgrounds">true</item>
  </style>

  <style name="Theme.Carteiro.Translucent.Dialog">
    <item name="android:windowBackground">@color/dialog_scrim</item>
    <item name="android:colorBackgroundCacheHint">@null</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowIsFloating">false</item>
    <item name="android:windowIsTranslucent">true</item>
  </style>
</resources>
