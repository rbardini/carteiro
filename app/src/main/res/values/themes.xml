<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="Base.Theme.Carteiro" parent="Theme.MaterialComponents.Light.NoActionBar" />

  <style name="Theme.Carteiro" parent="Base.Theme.Carteiro">
    <!-- Color attributes -->
    <item name="colorPrimary">@color/theme_primary</item>
    <item name="colorPrimaryDark">@color/theme_primary_dark</item>
    <item name="colorPrimaryVariant">@color/theme_primary_dark</item>
    <!-- <item name="colorOnPrimary" /> -->
    <item name="colorSecondary">@color/theme_accent</item>
    <!-- <item name="colorSecondaryVariant" /> -->
    <item name="colorOnSecondary">@color/white</item>

    <!-- Additional color attributes -->
    <item name="android:colorBackground">@color/theme_background</item>
    <!-- <item name="colorOnBackground" /> -->
    <item name="colorSurface">@color/theme_background</item>
    <!-- <item name="colorOnSurface" /> -->
    <!-- <item name="colorError" /> -->
    <!-- <item name="colorOnError" /> -->

    <!-- <item name="scrimBackground" /> -->
    <item name="actionModeBackground">@color/theme_accent</item>
    <item name="windowActionModeOverlay">true</item>

    <item name="android:windowAllowEnterTransitionOverlap">true</item>
    <item name="android:windowAllowReturnTransitionOverlap">true</item>
    <item name="android:windowBackground">@color/theme_background</item>
  </style>

  <style name="Theme.Carteiro.Translucent">
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="android:windowDrawsSystemBarBackgrounds">true</item>
  </style>

  <style name="Theme.Carteiro.Translucent.Dialog">
    <item name="android:background">@null</item>
    <item name="android:windowBackground">@color/dialog_scrim</item>
    <item name="android:colorBackgroundCacheHint">@null</item>
    <item name="android:windowIsTranslucent">true</item>
  </style>
</resources>
