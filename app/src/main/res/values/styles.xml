<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!-- Widget -->
  <style name="TextAppearanceButton" parent="@style/TextAppearance.AppCompat.Button">
    <item name="android:textAllCaps">true</item>
  </style>
  <style name="EditTextStyle" parent="@style/Widget.AppCompat.EditText">
    <item name="android:singleLine">true</item>
    <item name="android:includeFontPadding">false</item>
  </style>
  <style name="BorderlessButtonStyle" parent="@android:style/Widget.DeviceDefault.Light.Button">
    <item name="android:textAppearance">?android:textAppearanceButton</item>
    <item name="android:textColor">@color/borderless_button_text</item>
    <item name="android:background">@drawable/borderless_button_background</item>
    <item name="android:minWidth">@dimen/button_min_width</item>
  </style>
  <style name="PopupTheme" parent="ThemeOverlay.AppCompat.Light">
    <item name="android:colorBackground">@color/theme_background</item>
  </style>

  <!-- Custom Widgets -->
  <style name="ActionBar">
    <item name="android:id">@id/toolbar</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">?attr/actionBarSize</item>
    <item name="android:background">?attr/colorPrimary</item>
    <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    <item name="popupTheme">@style/PopupTheme</item>
  </style>
  <style name="ActionBar.Raised" />
  <style name="ActionBar.Light">
    <item name="theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
  </style>
  <style name="TrkCodeField">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:hint">@string/hint_tracking_code</item>
    <item name="android:singleLine">true</item>
    <item name="android:inputType">textCapCharacters|textNoSuggestions</item>
    <item name="android:digits">abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890</item>
    <item name="android:maxLength">13</item>
    <item name="android:selectAllOnFocus">true</item>
  </style>
  <style name="ItemDescField">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:hint">@string/hint_item_description</item>
    <item name="android:singleLine">true</item>
    <item name="android:inputType">textCapSentences</item>
    <item name="android:selectAllOnFocus">true</item>
  </style>
  <style name="Star" parent="@android:style/Widget.DeviceDefault.CompoundButton.Star">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginRight">-2dp</item>
    <item name="android:layout_marginBottom">-2dp</item>
    <item name="android:button">@drawable/button_star</item>
  </style>

  <!-- List -->
  <style name="ListView" parent="@style/android:Widget.DeviceDefault.ListView">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:dividerHeight">1px</item>
    <item name="android:cacheColorHint">@color/theme_background</item>
    <item name="android:clipToPadding">false</item>
    <item name="android:drawSelectorOnTop">true</item>
  </style>
  <style name="ListItem">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:minHeight">@dimen/tile_min_height</item>
    <item name="android:padding">@dimen/keyline_1</item>
  </style>
  <style name="ListText">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:fontFamily">sans-serif-light</item>
  </style>
  <style name="ListText.Title">
    <item name="android:textColor">?android:attr/textColorPrimary</item>
    <item name="android:textSize">@dimen/text_size_subhead</item>
  </style>
  <style name="ListText.SubTitle">
    <item name="android:layout_marginBottom">2dp</item>
    <item name="android:textSize">@dimen/text_size_body</item>
  </style>
  <style name="ListText.Info">
    <item name="android:textSize">@dimen/text_size_caption</item>
  </style>

  <!-- Record Activity -->
  <style name="RecordHeader">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">@color/theme_primary</item>
  </style>
  <style name="RecordHeader.Raised" />
  <style name="RecordSubHeader">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingLeft">?attr/actionBarSize</item>
    <item name="android:paddingBottom">@dimen/keyline_1</item>
    <item name="android:paddingRight">@dimen/keyline_1</item>
  </style>
  <style name="RecordHeading">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/white</item>
  </style>
  <style name="RecordHeading.Title">
    <item name="android:textSize">@dimen/text_size_title</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_marginLeft">-4dp</item>
    <item name="android:layout_marginBottom">6dp</item>
    <item name="android:inputType">textCapSentences</item>
    <item name="android:hint">@string/hint_item_description</item>
  </style>
  <style name="RecordHeading.Subtitle">
    <item name="android:fontFamily">sans-serif-light</item>
    <item name="android:textAllCaps">true</item>
  </style>

</resources>
