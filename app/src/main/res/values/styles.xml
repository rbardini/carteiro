<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!-- Widget -->
  <style name="PopupTheme" parent="ThemeOverlay.AppCompat.Light">
    <item name="android:colorBackground">@color/theme_background</item>
  </style>
  <style name="ActionBar">
    <item name="android:id">@id/toolbar</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">?attr/actionBarSize</item>
    <item name="android:background">?attr/colorPrimary</item>
    <item name="android:elevation">4dp</item>
    <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    <item name="popupTheme">@style/PopupTheme</item>
  </style>
  <style name="ActionBar.Flat">
    <item name="android:elevation">0dp</item>
  </style>
  <style name="ActionBar.Flat.Light">
    <item name="android:theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
  </style>
  <style name="TrkCodeField">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:singleLine">true</item>
    <item name="android:inputType">textCapCharacters|textNoSuggestions</item>
    <item name="android:digits">abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890</item>
    <item name="android:maxLength">13</item>
    <item name="android:selectAllOnFocus">true</item>
  </style>
  <style name="ItemDescField">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:singleLine">true</item>
    <item name="android:inputType">textCapSentences</item>
    <item name="android:selectAllOnFocus">true</item>
  </style>
  <style name="Star" parent="@android:style/Widget.DeviceDefault.CompoundButton.Star">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginRight">-2dp</item>
    <item name="android:layout_marginBottom">-2dp</item>
    <item name="android:button">@drawable/button_favorite</item>
  </style>

  <!-- List -->
  <style name="ListItem">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:minHeight">@dimen/tile_min_height</item>
    <item name="android:padding">@dimen/keyline_1</item>
  </style>
  <style name="ListText">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>
  <style name="ListText.Title">
    <item name="android:layout_marginBottom">2dp</item>
    <item name="android:textColor">?android:attr/textColorPrimary</item>
    <item name="android:textSize">@dimen/text_size_subhead</item>
  </style>
  <style name="ListText.SubTitle">
    <item name="android:layout_marginBottom">2dp</item>
    <item name="android:textSize">@dimen/text_size_body</item>
  </style>
  <style name="ListText.Info">
    <item name="android:textSize">@dimen/text_size_body</item>
  </style>

  <!-- Record Activity -->
  <style name="RecordSubHeader">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingLeft">@dimen/keyline_3</item>
    <item name="android:paddingBottom">@dimen/keyline_1</item>
    <item name="android:paddingRight">@dimen/keyline_1</item>
  </style>
  <style name="RecordHeading">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/white</item>
  </style>
  <style name="RecordHeading.Subtitle">
    <item name="android:textAllCaps">true</item>
  </style>

</resources>
